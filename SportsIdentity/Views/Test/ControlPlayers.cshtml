@model List<SportsIdentity.Models.Player>

@{
    ViewBag.Title = "ControlPlayers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ControlPlayers</h2>

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">National</th>
            <th scope="col">DateOfBorth</th>
            <th scope="col">footBallTeam</th>
            <th scope="col">PlayerImage</th>
            <th scope="col"></th>
            <th scope="col"></th>

        </tr>
    </thead>
    <tbody>
        @foreach (SportsIdentity.Models.Player item in Model)
        {
            <tr>
                <th scope="row">@item.ID</th>
                <td>@item.Name</td>
                <td>@item.national</td>
                <td>@item.DateOfBirth</td>
                @*<td>@item.FootBallTeam.Name</td>*@
                <td><img style="height:80px;width:100px;" src="~/Assets/images/@item.image" /></td>
                <td>@Html.ActionLink("Change", "Change", new { id = item.ID }, new { @class = "btn btn-info" })</td>
                <td>@Html.ActionLink("Remove", "Remove", new { id = item.ID }, new { @class = "btn btn-danger" })</td>
            </tr>
        }


    </tbody>
</table>